{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "security": {
          "noDangerouslySetInnerHtml": "off"
        },
        "complexity": {
          "noBannedTypes": "off",
          "noForEach": "warn",
          "useOptionalChain": "warn"
        },
        "correctness": {
          "noUnusedVariables": "off",
          "useExhaustiveDependencies": "off",
          "useJsxKeyInIterable": "off",
          "noChildrenProp": "off",
          "noUnusedImports": "error",
          "recommended": true
        },
        "style": {
          "noNonNullAssertion": "off",
          "noUselessElse": "off",
          "noCommaOperator": "off",
          "recommended": true,
          "useTemplate": "warn",
          "useImportType": {
            "level": "error",
            "fix": "safe"
          }
        },
        "a11y": {
          "useKeyWithClickEvents": "off"
        },
        "suspicious": {
          "recommended": true,
          "noShadowRestrictedNames": "off",
          "noImplicitAnyLet": "warn",
          "noExplicitAny": "off",
          "noDuplicateTestHooks": "off",
          "noArrayIndexKey": "off"
        }
      }
    },
    "files": {
      "ignore": ["build/*", "node_modules", "public/*.js", "shared", "prisma", ".turbo"],
      "include": ["./*"]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 140,
      "lineEnding": "lf"
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "always",
        "trailingCommas": "all"
      }
    }
  }
  